<div class="container margin-top">
  
    <div class="row">
      <h2 class="myh">Mis Productos y Servicios</h2>
    </div>
    
    <% if @products.blank? %>
    <h4>Debes agregar productos</h4>
    <% else %>
    
    <div class="row">
      <%= link_to 'Nuevo', new_product_path, class:'btn float-right margin-5' %>
    </div>
    
    <div class="row">
      <% @cont = 0 %>
      <div class="col-xs-3">
        <% @products.each do |p| %>
          <%  if @cont%4 == 0 %>
            <div class="thumbnail">
              <div class="opacity">
                <%= link_to my_offer_path(p) do %>
                  <%= image_tag p.product_image.url(:medium), alt: "Cuadernos", style:"width:100%; height:auto", class:"img-rounded center" %>
                  <div class="caption">
                    <h4><%= p.name %></h4>
                    <% if p.p_type == 1 %>
                      <p>Producto</p>
                    <% else %>
                      <p>Servicio</p>
                    <% end %>
                    <p><%= p.description  %></p>
                  </div>
                <% end %>
              </div>
            </div>
          <%  end %>
          <% @cont = @cont + 1 %>
        <% end %>
      </div>

