                  <%= image_tag("product02.jpg", alt: "Cuadernos", style:"height: 150px; object-fit: contain", class:"img-rounded") %>
                  <div class="caption">
                    <h4><%= p.name %></h4> 
                    <h6><%= p.p_type %></h6>
                    <p><%= p.description  %></p>
                  </div>
                </a>
              </div>
              <span><%= link_to 'Edit', edit_product_path(p) %></span>
              <span><%= link_to 'Destroy', p, method: :delete, data: { confirm: 'Are you sure?' } %></span>
            </div>
          <%  end %>
          <% @cont = @cont + 1 %>
        <% end %>
