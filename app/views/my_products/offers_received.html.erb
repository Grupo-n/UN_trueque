<h1 class="myh margin-top">Ofertas recibidas</h1>
<div class="container">

  <table class="table">
    <thead>
      <tr>
        <th>Producto1</th>
        <th>Producto2</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @barters.each do |barter| %>
        <tr>
          <td><%= barter.product_one_id %></td>
          <td><%= barter.product_two_id %></td>
          <td><%= barter.description %></td>
          <td><%= link_to 'Show', barter %></td>
          <td><%= link_to 'Edit', edit_barter_path(barter) %></td>
          <td><%= link_to 'Destroy', barter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


  <br>

  <%= link_to 'New Barter', new_barter_path %>

</div>
