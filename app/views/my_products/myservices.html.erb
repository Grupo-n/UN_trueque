<div class="container mt">

 <div class="row">
    <div class="col-sm-12">
      <h2 class="myh">Mis Servicios</h2>
      <%= link_to 'Nuevo', new_product_path, class:'btn btn-default btn-right' %>
    </div>
  </div>

  <% if @products.blank? %>
    <h4>No hay productos</h4>
  <% else %>
    <div class="row">
      <% @products.each do |p| %>
        <div class="col-md-3 row-eq-height">
          <div class="my-thumbnail">
            <div class="opacity">
              <%= link_to offer_my_product_path(p) do %>
                <div class="superCenter img-div-size" style="">
                  <%= image_tag p.product_image, alt: "", style:"max-height:200px;", class:"img-rounded" %>
                </div>
                <!--img src="/w3images/lights.jpg" alt="Lights" style="width:100%"-->
                <div class="caption container-fluid caption-div-size" style="">
                  <h4><%= p.name %></h4>
                  <% if p.p_type == 1 %>
                    <h6>Producto</h6>
                  <% else %>
                    <h6>Servicio</h6>
                  <% end %>
                  <h6><%= p.description  %></h6>
                </div>
              <% end %>
            </div>  
            <span><%= link_to 'Edit', edit_product_path(p), class:"btn btn-ghost" %></span>
            <span><%= link_to 'Destroy', p, method: :delete, data: { confirm: 'Are you sure?'}, class:"btn btn-ghost" %></span>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="offset-md-4 col-md-7">
    <ul class="pagination pagination-lg"> <%= will_paginate @products, renderer: BootstrapPagination::Rails, class: "pagination pagination-lg", :previous_label => t("Anterior"), :next_label => t("Siguiente")%> </ul>
  </div>

</div>
