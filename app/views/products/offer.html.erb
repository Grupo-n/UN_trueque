<!DOCTYPE html>
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <%= stylesheet_link_tag "application" %>
</head>
<body>
    <div class="content margin-top">
        <div class="row">
            <div class="offset-sm-2 col-sm-8">
                <div class="panel panel-default devise-bs">
                    <div class="panel-heading">
                        <h2 style="padding:0; margin:0;">Ofertar</h2>
                    </div>
                    <div class="panel-body">
                        <form class="margin-5-50">
                            <label class="radio-inline">
                                <input type="radio" name="optradio">Producto
                            </label>
                            <label class="radio-inline disabled">
                                <input type="radio" name="optradio" disabled='disabled'>Gratuito
                            </label>
                            <label class="radio-inline disabled">
                                <input type="radio" name="optradio" disabled='disabled'>Servicio
                            </label>
                        </form>
                        
                        <div class="row margin-25">
                            <div class="col-sm-6">
                              <%= link_to "Nuevo", new_product_path, class:"btn margin-5" %>
                            </div>
                            <div class="col-sm-6">
                                <button type="button" class="btn btn-right margin-5" data-toggle="modal" data-target="#modal">Mis Productos</button>
                                <!--%= link_to  "Mis Productos", nil, { :class => 'btn btn-right margin-5', 'data-toggle' => 'modal', 'data-target'=>'#modal' } %-->
                            </div>
                        </div>
                        
                        <%= form_for @barter do |b| %>
                            <%= b.text_area :description, class: 'form-control', rows: '5', placeholder: 'Añade un comentario aquí' %>
                            <%= b.hidden_field :product_one_id, :value => @product.id %>
                            <%= b.hidden_field :product_two_id, :value => @myproducts.find(5).id %>
                            <%= b.button :submit, class: 'btn float-right margin-5' %>
                        <% end %>
                    </div>
                </div>
            </div>  
        </div>
  </div>
  
    <!-- Modal -->
    <div class="modal fade" id="modal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Mis Productos</h4>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <div class="row">
                            <% @myproducts.each do |product| %>
                            <div class="col-xs-4">
                                <div class="thumbnail opacity">
                                    <a href="#">
                                        <%= image_tag("product01.jpg", alt: "Cuadernos", style:"width:100%; height:auto", class:"img-rounded") %>
                                        <div class="caption">
                                            <h3><%= product.name %></h3>
                                            <p><%= product.description %></p>
                                        </div>
                                    </a>
                                </div>
                            </div>
                            <% end %>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

