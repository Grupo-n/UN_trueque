<div class="container">
  <%= form_with(model: product, local: true, :html => {:class => 'form-horizontal'}) do |form| %>
    <% if product.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

        <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="form-group">
      <%= form.label :name, {:class => "control-label col-xs-2 formLabel"}%>
      <div class="col-xs-6">
        <%= form.text_field :name, id: :product_name, class: 'form-control formInput'%>
      </div>
    </div>
    
    <div class="form-group">
      <%= form.label :description, {:class => "control-label col-xs-2 formLabel"}%>
      <div class="col-xs-6">
        <%= form.text_field :description, id: :product_description, class: 'form-control formInput'%>
      </div>
    </div>
    
    <div class="form-group">
      <%= form.label :img, {:class => "control-label col-xs-2 formLabel"} %>
      <div class="col-xs-6">
        <%= form.text_field :img, id: :product_img, class: 'form-control formInput' %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :typeInt, {:class => "control-label col-xs-2 formLabel"} %>
      <div class="col-xs-6">
        <%= form.number_field :typeInt, id: :product_typeInt, class: 'form-control formInput'  %>
      </div>
    </div>
    
    <div class="actions">
    <%= form.submit nil, class:"btn"%>
  </div>
  <% end %>
  
  
</div>
