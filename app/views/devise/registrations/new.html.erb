<% content_for :head do %>
<style>
  body{
    margin-left:0px !important;
  }
</style>
<% end %>
<%= bootstrap_devise_error_messages! %>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-offset-4 col-md-4" style="padding: 10px">
      <%=image_tag("logoun.png", alt: "logo UNTrueque", id:"logo-unt", width:"100%")%>
    </div>
  </div>
  <div class="row">
    <div class="col-md-offset-3 col-md-6">
      <div class="main-login main-center">
        <div class="panel panel-default devise-bs">
          <div class="panel-heading center">
            <h2 class="myhnot"><%= t('.sign_up', default: 'Sign up') %></h2>
          </div>
          <div class="panel-body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form' }) do |f| %>
            <div class="field">
              <%= f.file_field :avatar %>
            </div>

              <div class="form-group">
              <%= f.label :Nombre %>
              <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
              </div>
              <div class="form-group">
              <%= f.label :Apellidos %>
              <%= f.text_field :last_name, autofocus: true, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :Contraseña %>
                <%= f.password_field :password, class: 'form-control' %>
              </div>
              <div class="form-group">
                <%= f.label :Confirmar_contraseña %>
                <%= f.password_field :password_confirmation, class: 'form-control' %>
              </div>
                <%= f.hidden_field :score, :value=>5.0 %>
              <div class="row">
                <div class="col-md-offset-3 col-md-6 center">
                  <%= f.submit t('.sign_up', default: 'Sign up'), class: 'btn btn-default' %>
                </div>

              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>

</div>
<center>
  <%= render 'devise/shared/links' %>
</center>
