<%= bootstrap_devise_error_messages! %>
<div class="container">
  <div class="panel-body">
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class="form-group center">
         <%= f.file_field :avatar %>
           <% if @user.avatar? %>
            <%= image_tag @user.avatar.url(:large) %>
          <% end %>
        </div>
          <div class="form-group">
          <%= f.label :Nombre %>
          <%= f.text_field :first_name, autofocus: true, class: 'form-control' %>
          </div>
          <div class="form-group">
          <%= f.label :Apellidos %>
          <%= f.text_field :last_name, autofocus: true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, class: 'form-control' , readonly: "readonly" %>
          </div>
          <div class="form-group">
            <%= f.label :Contraseña %> <i>(<%= t('.leave_blank_if_you_don_t_want_to_change_it', default: "Deja en blanco si no quieres cambiar tu contraseña") %>)</i>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :Confirmar_contraseña %>
            <%= f.password_field :password_confirmation, class: 'form-control'  %>
          </div>
          <div class="form-group">
            <%= f.label :Contraseña_actual%> <i>(<%= t('.we_need_your_current_password_to_confirm_your_changes', default: 'Necesitamos tu contraseña actual para realizar los cambios') %>)</i>
            <%= f.password_field :current_password, class: 'form-control' %>
          </div>

          <div class="row">
            <div class="offset-md-3 col-md-6">
              <%= f.submit t('.update', default: 'Actualizar'), class: 'btn btn-full my-btn' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= link_to t('.back', default: 'Regresar'), :back %>
