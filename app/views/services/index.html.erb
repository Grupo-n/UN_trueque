<p id="notice"><%= notice %></p>

<div class="container prodh1"><h1>Services</h1></div>

<% if @services.blank? %>
<p> No hay productos</p>
<% else %>
<section class="team" id="team">
  <div class="container">
    <div class="row">
      <% @services.each do |d| %>
      <div class="col-sm-4">
        <div class="card card-block my-item">
          <a href="#">
              <%= image_tag d.image_service.url(:medium), class:"team-img" %>
              <div class="card-title-wrap">
                <span class="card-title"><%= d.name %></span> <span class="card-text">Tipo: intercambio/venta/donacion</span>
              </div>
          </a>
          <div class="team-over">
            <a href="#">
            <h4 class="hidden-md-down">
              Ver Servicio!!
            </h4>

            </a>

            <p>
              <%= d.description%>
            </p>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</section>
<% end %>


<br>
<center>
  <%= link_to 'New Service', new_service_path, {:class => "btn"} %>
</center>
