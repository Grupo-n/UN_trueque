          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>                        
        </button>
        <%= link_to image_tag("logo-nav.png", alt: "logo UNTrueque", id:"logo-unt-nav"), :user_home, class:"navbar-brand" %>
      </div>
      
      <form class="navbar-form navbar-left">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button 
        type="submit" class="btn btn-inverse">Submit</button>
      </form>
      
      <div class="collapse navbar-collapse" id="navbar">
        <ul class="nav navbar-nav navbar-right">
          <li class><%= link_to  glyph(:"glyphicon glyphicon-home") + "  Inicio", :user_home  %></li>
          <li><%= link_to  glyph(:"glyphicon glyphicon-shopping-cart") + "  Vender", new_product_path  %></li>
          <li><%= link_to  glyph(:"glyphicon glyphicon-envelope") + "  ContÃ¡ctanos", contact_path  %></li>
          <% if !current_user.nil? %>
          <li><%= link_to  glyph(:"glyphicon glyphicon-user") + "  Perfil", :user_information %></li>
          <% end %>
          <li class=""><%= link_to  glyph(:"glyphicon glyphicon-log-out") + "  Logout", destroy_user_session_path, method: :delete %></li>
        </ul>
      </div>
      
    </div>
  </nav>
</body>
</html>
