<div class="container margin-top">
  <% if @products.blank? %>
    <p> No hay productos</p>
  <% else %>
    <div class="row">
      <div class="offset-md-2 col-md-8 center">
        <h1 class="myh1">Products & services</h1>
      </div>
    </div>
    <div class="row">
      <% @products.each do |d| %>
        <div class="col-xs-4">
          <div class="thumbnail">
            <div class="opacity">
              <a href=<%= "#{products_path}/#{d.id}" %>>
                <!--%= image_tag d.product_image.url(:medium), alt: "Cuadernos", style:"width:100%; height:auto", class:"img-rounded") %-->
                <%= image_tag("product01.jpg", alt: "Cuadernos", style:"width:100%; height:auto", class:"img-rounded") %>
                <div class="caption">
                  <h4 class="card-title"><%= d.name %></h4> 
                  <p class="card-text"><%= d.p_type %></p>
                  <p>Lorem ipsum donec id elit non mi porta gravida at eget metus.</p>
                </div>
              </a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>


